<%= form_for(form_object) do |f| %>
  <%= render 'shared/error_messages', form_object: form_object %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <% if form_object == @task %>
    <div class="area">
      <%= f.label :detail %>
      <%= f.text_area :detail, class: 'form-control' %>
    </div>
    <div class="date">
      <%= f.label :deadline %>
      <%= f.date_field :deadline, class: 'form-control' %>
    </div>
    <div class="select">
      <%= f.label :status %>
      <%= f.select :status, Task.statuses.map{ |k,v| [Task.statuses_i18n[k], k] }, { include_blank: "" }, class: 'form-control' %>
    </div>
    <div class="select">
      <%= f.label :priority %>
      <%= f.select :priority, Task.priorities.map{ |k,v| [Task.priorities_i18n[k], k] }, {}, :selected => "ä¸­", class: 'form-control' %>
    </div>

  <% elsif form_object == @user %>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="password_field">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="password_field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  <% end %>

    <%= f.submit button_text, class: "btn btn-primary" %>
<% end %>