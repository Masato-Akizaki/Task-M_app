<%= form_for(form_object) do |f| %>
  <%= render 'shared/error_messages', form_object: form_object %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="area">
    <%= f.label :detail %>
    <%= f.text_area :detail, class: 'form-control' %>
  </div>
  <div class="date">
    <%= f.label :deadline %>
    <%= f.date_field :deadline, class: 'form-control' %>
  </div>

    <%= f.submit button_text, class: "btn btn-primary" %>
<% end %>